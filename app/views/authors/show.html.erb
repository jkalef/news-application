<%# navigation menu -------- %>
<%= render partial: "/layouts/menus", locals: {tags: @tags, user: @users, featured_posts: @featured_posts}  %>

<div class="container">
  <h3 style="text-align: center">Posts written by: <em><%= @author.show_name %></em>:</h3>
</div>


<div class="view-container">
<div id="posts-to-test" class="transitions-enabled">
  <% @posts.each do |post| %>
    <div class="box panel panel-default">
       <%= link_to (image_tag post.picture.url), post %>
       <h2><%= link_to post.title, post %></h2>
       <p class="user"><%= post.user.show_name %></p>
       <p class="user">Tags: <% post.tags.each do |tag| %>
                                <%= link_to tag.name, tag_path(tag) %>
                              <% end %>
        <div class="snippet-content">
            <% if post.id % 2 == 0 && post.id % 3 == 0 %>
                <p class="post-snippet-content"><%= truncate(post.body, length: (900)) %></p>
            <% elsif post.id % 2 == 0 %>
                <p class="post-snippet-content"><%= truncate(post.body, length: (200)) %></p>
            <% elsif post.id % 3 == 0 %>
              <p class="post-snippet-content"><%= truncate(post.body, length: (500)) %></p>
            <% else %>
                 <p class="post-snippet-content"><%= truncate(post.body, length: (100)) %></p>
            <% end %>
            </div>
            <div class="button-area">
                <%# link_to "Read More", post_path(post), class: "btn btn-success"%>
                <%= render partial: "/favorites/favorite", locals: {post: post} %>
            </div>
            <div class="social-share-buttons">
               <%= social_share_button_tag(post.title) %>
            </div>       
    </div>
    <% end %>
</div>
</div>