<!--DISPLAY THE POSTS -->
<div class="container">
		<!--start looping over the post -->
		<% @posts.each do |post| %>
    <div class="col-md-6 col-xs-12">
        <div class="post-container">
            <!--contains the picture and title text -->
            <div class="image-and-header">
            		<%= image_tag post.picture.url(:medium), class: "post-image" %>
                <!--Title should be a link to the post -->
                <h2 class="title-link-to-post"><%= link_to post.title, post %></h2>
                <p class="article-title-details">By: <%= link_to post.user %>, <%= link_to post.created_at %></p>
            </div>
            <div class="snippet-content">
                <p class="post-snippet-content"><%= truncate(post.body, length: 200) %></p>
            </div>
            <div class="button-area">
										<%= link_to "Read More", post_path(post), class: "btn btn-success"%>
										<% favorite = post.favorites.find_by_user_id(current_user.id) if user_signed_in? %>
										<% if favorite %> 
												<%= link_to "Remove From Favorites", [post, favorite], method: :delete, class: "btn btn-primary" %>
										<% else %>
												<%= link_to "Read Later", post_favorites_path(post), method: :post, class: "btn btn-primary" %>
										<% end %>		
								</div>
								<div class="social-share-buttons">
									<i class="fa fa-facebook-official fa-2x"></i>
									<i class="fa fa-twitter-square fa-2x"></i>
									<i class="fa fa-pinterest-square fa-2x"></i>
									<i class="fa fa-tumblr-square fa-2x"></i>
								</div>										
      </div>
      </div>
      <% end %>
