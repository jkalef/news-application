<div class="container">
	<div class="col-md-9">

			<%# display the post using instance variable from the posts_controller %>
			<h3><%= @post.title %></h3>
				<% if user_signed_in? %>
					<%= @post.user %>
				<% end %>
			<br>
			<%= image_tag @post.picture.url(:medium) %>
			<br>
			<p><%= @post.body %></p>

				

			<%# Add a link to edit your post %>
			<%= link_to "Edit", edit_post_path(@post) %>
			<%= button_to "Delete", post_path(@post), method: :delete, data: {confirm: 
														"Are you sure you want to delete?"} %>
			<br>
			<br>

			<%# Create a new comment %>
			<% if @comment.errors.any? %>
				<% @comment.errors.full_messages.each do |msg| %>
					<%= msg %>
					<br>
				<% end %>
			<% end %>


			<%= form_for @comment, url: post_comments_path(@post) do |f| %>
				<%= f.text_area :body, placeholder: "Your Comment Goes Here" %>
				<br>
				<%= f.submit "Submit Comment" %>
			<% end %>

			<br>

			<%# View My Comments %>
			<% @comments.each do |comment| %>
				<%= comment.body %>
				<br>
				<%= comment.user %>
				<br>
				<%= button_to "Delete Comment", post_comment_path(@post, comment), method: :delete, data: {confirm: "are you sure you want to delete this comment?"} %>
				<hr>
			<% end %>
			</div>
</div>