<div class="container">
	<div class="col-md-9">

			<%# display the post using instance variable from the posts_controller %>
			<h3><%= @post.title %></h3>
				<% if user_signed_in? %>
					<%= @post.user %>
				<% end %>
			<br>
			<%= image_tag @post.picture.url(:medium) %>
			<br>
			<p><%= @post.body %></p>


			<div class="fb-share-button" data-href="<%= post_url(@post) %>" data-layout="button_count"></div> 
	

			<%#---MODAL FOR EDITING A QUESITON -------------------------------------------- %>
			<!-- Button trigger modal -->
			<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
			  Launch demo modal
			</button>

			<!-- Modal -->
			<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
			  <div class="modal-dialog">
			    <div class="modal-content">
			      <div class="modal-header">
			        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
			      </div>
			      <div class="modal-content">
			        ...
			      </div>
			    </div>
			  </div>
			</div>


			<%# Add a link to edit your post %>
			<%= link_to "Edit", edit_post_path(@post) %>
			<%= button_to "Delete", post_path(@post), method: :delete, data: {confirm: 
														"Are you sure you want to delete?"} %>
			<br>
			<br>

			<%#--Refer to the 'comment form' partial to create a new comment %>
			<div class="comment-form">
				<h2>Add A Comment</h2>
				<%= render partial: "/comments/form" %>
			</div>

			<br>

			<%#--Refer to comment partial to display all the comments %>
			<h2>View Comments</h2>
			<div class="comments">
				<% @comments.each do |comment| %>
					<%= render partial: "/comments/comment", locals: {comment: comment} %>
				<% end %>
			</div>
			

			</div>
</div>