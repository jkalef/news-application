<h1>View Your Posts</h1>

<table class="table">
	<tr>
		<th>Post Title</th>
		<th>Edit This Post</th>
		<th>Delete This Post</th>
	</tr>
	<% @posts.each do |post| %>
	<tr>
		<td><%= post.title %></td>
		<td><%= link_to "Edit Post", edit_post_path(post) %></td>
		<td><%= button_to "Delete Post", post_path(post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %></td>
	</tr>
	<% end %>
</table>